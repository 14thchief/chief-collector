mixin navbar(user)
    nav.navbar-expand.navbar.dark.bg-dark
      a(href="/", aria-label="Chief Collector").navbar-brand.mr-0.mr-md-2 Chief Collector
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      div.collapse.navbar-collapse
        ul.navbar-nav.ml-auto 
          li.nav-item 
            a.nav-link(href="/") Home
          li.nav-item 
            a.nav-link(href="/leads") Leads
      .navbar-right
        if user
          span.navbar-text.text-success Hello #{user.email}!
          | 
      .navbar-right
        ul.navbar-nav.ml-auto
          if !user
            li.nav-item
              a.nav-link(href="/signup") Sign up 
            li.nav-item 
              a.nav-link(href="/login") Login
          if user
            li.nav-item 
                a.nav-link(href='/logout') Logout