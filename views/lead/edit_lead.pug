doctype html
html(lang='en')
    include ../common/head.pug
    +head("Our valued customers")

    body
        include ../common/navbar.pug
        +navbar()
        .container 
            .row.align-items-center
                .col-md-6.order-md1.text-center.text-md-left.pr-md-5
                    h1 Edit Lead
                    br
        
                    form(action="/lead/" + lead.id + "/edit", method="POST")
                      div.input-group.mb-3
                        input(name="lead_email", type="email", placeholder="Enter your email address", value= lead.email).form-control
                        .input-group-append
                            button(class="btn btn-success", type="submit") Save Update
                            |  
                            button.btn.btn-secondary(type="submit", href="/lead/" + lead.id) Cancel

        include ../common/footer.pug 
        +footer()