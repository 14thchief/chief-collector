doctype html
html(lang='en')
    include ../common/head.pug
    +head("Our valued customers")

    body
        header
            include ../common/navbar
            +navbar(user)
            .container 
            .row.align-items-center
                .col-md-6.order-md1.text-center.text-md-left.pr-md-5
                    h1 Leads
                    br
                    table.table.table-hover
                        thead.thead-black
                            tr 
                                th(scope="col") Email 
                                th(scope="col") Actions 
                                th(scope="col")

                        tbody
                            for lead in leads
                                tr(id=lead.id)
                                    td
                                        span #{lead.email}
                                    td  
                                        a(href="/lead/" + lead.id) Details
                                    td 
                                        button(class="btn btn-danger" onClick=`deleteLead('${lead.id}')`).btn.btn-danger Delete
                                tr

        include ../common/footer.pug 
        +footer()
        script(src="/javascripts/leads.js")